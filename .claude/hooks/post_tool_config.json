    {
      "name": "subagent_cascade", 
      "pattern": "Task → Task → Task",
      "message": "Multiple subagents without hive memory coordination",
      "severity": "moderate",
      "suggested_tools": ["mcp__claude-flow__memory_usage", "mcp__zen__consensus"]
